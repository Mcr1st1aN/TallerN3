import java.util.Scanner;

public class SumaNumerosPrimeros {

    public static void main(String[] args) {
        System.out.println("Ingrese la cantidad a alcanzar: ");
        Scanner sc = new Scanner(System.in);
        int cantidad = sc.nextInt();
        int n = 1;
        int suma = 0;
        while (suma < cantidad) {
            suma += n;
            n++;
        }
        System.out.println("El número natural N más pequeño es: " + n);
    }
}
